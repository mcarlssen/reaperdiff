{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2017"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../dist/server",
    "rootDir": "./",
    "types": ["node"]
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
} 